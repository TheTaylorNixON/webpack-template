extends ../_template.pug

block content
    +header()
    section.del-section.del-section1
        .del-sec1-bg
        .del-sec1-overflow
        .del-sec1-form
            .del-form-title Lite Доставка
            .del-form-subtitle Круглосуточная доставка <br> в один клик
            .del-form-download Скачайте бесплатно:
            +apps()
        a(href="/#").arrow-down#js-arrow-down

    section.del-section.del-section2#js-section-2
        .del-sec2-advantages
            .midle-container
                .del-sec2-title Lite Доставка
                .del-sec2-subtitle Курьер заберет посылку в течение 5 минут
                .del-sec2-items
                    ul.del-sec2-list
                        li.del-sec2-item
                            .icon
                                img(src="../img/icons/del1.png", alt="")
                            .icon-text Стоимость доставки фиксируется в приложении
                        li.del-sec2-item
                            .icon
                                img(src="../img/icons/del2.svg", alt="")
                            .icon-text Вес посылки до 20 кг, размер до 170 см в трех измерениях
                        li.del-sec2-item
                            .icon
                                img(src="../img/icons/del3.png", alt="")
                            .icon-text Оплата банковской картой в приложении
                        li.del-sec2-item
                            .icon
                                img(src="../img/icons/del4.png", alt="")
                            .icon-text Посылки упакованы в специальные safe-пакеты
                        li.del-sec2-item
                            .icon
                                img(src="../img/icons/del5.png", alt="")
                            .icon-text Доступно круглосуточно 24 часа, 7 дней в неделю
                        li.del-sec2-item
                            .icon
                                img(src="../img/icons/del6.png", alt="")
                            .icon-text Быстрая доставка: курьер сразу отвезет посылку получателю

        .del-sec2-image
            img(src="../img/mobile-delivery.png", alt="mobile-delivery")

    section.del-section.del-section3
